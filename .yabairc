#!/usr/bin/env sh

sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

# global settings
yabai -m config mouse_follows_focus          off
yabai -m config focus_follows_mouse          on
yabai -m config window_topmost               on
yabai -m config window_placement             first_child
yabai -m config window_topmost               off
yabai -m config window_opacity               on
yabai -m config window_opacity_duration      0.3
yabai -m config window_shadow                float
yabai -m config active_window_opacity        0.9
yabai -m config normal_window_opacity        0.7
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 off
yabai -m config mouse_modifier               fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize
yabai -m config window_border                on
yabai -m config window_border_width          4

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  28
yabai -m config bottom_padding               3
yabai -m config left_padding                 3
yabai -m config right_padding                3
yabai -m config window_gap                   5

# float system preferences
yabai -m rule --add app="^System Preferences$" manage=off

# float alacritty, to use it as dmenu
yabai -m rule --add app="^AlacrittyPopup$" manage=off

# float alacritty, to use it as dmenu
yabai -m rule --add app="^Dictionary$" manage=off

# show digital colour meter topmost and on all spaces
yabai -m rule --add app="^Digital Colou?r Meter$" sticky=on

echo "yabai configuration loaded.."
